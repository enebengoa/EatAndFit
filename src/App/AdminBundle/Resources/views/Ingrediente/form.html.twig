{% block body %}
	<form class="blogger" method="post" >
	{{ form_start(form) }}
	<div class="form-group">
		{{ form_row(form.nombre) }}
	</div>
	<div class="form-group">
		{{ form_row(form.descripcion) }}
	</div>
	<div class="form-group">
		{{ form_label(form.tipoIngrediente) }}</br>{{ form_widget(form.tipoIngrediente) }}
	</div>
	<div class="form-group">
		{{ form_label(form.unidadMedida) }}</br>{{ form_widget(form.unidadMedida) }}
	</div>
	<div class="form-group">
		{{ form_row(form.caloriasUnidad) }}
	</div>
		<div class="form-group">
		{{ form_label(form.celiaco) }}</br>{{ form_widget(form.celiaco) }}
	</div>
        {{ form_errors(form) }}
		
	{{ form_end(form) }}
	</form>

{% endblock %}
