{% extends 'baseuser.html.twig' %}
{% block stylesheets %}

{% block title %}Eat&Fit{% endblock%}
{{ parent() }}

{% endblock %}

{% block head %}
	
{% endblock %}

{% block body %}
<!--content-->
<div class="content">
	<div class="events">
		<div class="container">
			<div class="events-top">
				<div class="col-md-4 events-left animated wow fadeInLeft" data-wow-duration="1000ms" data-wow-delay="500ms">
					<h3><a href="{{ path('App_user_showBlog') }}">Utensilio</a></h3>
					<label><i class="glyphicon glyphicon-menu-up"></i></label>
					<span>Necesarios para volverse un chef</span>
				</div>
				<div class="col-md-8 events-right animated wow fadeInRight" data-wow-duration="1000ms" data-wow-delay="500ms">
				</div>
				<div class="clearfix"> </div>
				<div class="buscador">
					{{form_start(form)}}
						<div class="form-group">
							{{ form_row(form.nombre) }}
						</div>
					{{form_end(form)}}
				</div>
			</div>

			{% for utensilio in pagination %}
				<div class="events-bottom">
					<div class="col-md-5 events-bottom1 animated wow fadeInRight" data-wow-duration="1000ms" data-wow-delay="500ms">
						<img src="{{ asset ('imagenes/'~utensilio.imagen)}}" class="img-uten">
					</div>
					<div class="col-md-7 events-bottom2 animated wow fadeInLeft" data-wow-duration="1000ms" data-wow-delay="500ms">
						<h3>{{utensilio.nombre}}</h3>
						<label><i class="glyphicon glyphicon-menu-up"></i></label>
						<p>{{utensilio.descripcion}}
						</p>
					</div>
					<div class="clearfix"> </div>
				</div>
			{% endfor %}
			</br>
			<div class="navigation">
			    {{ knp_pagination_render(pagination) }}
			</div>			
		</div>
	</div>
</div>



{% endblock %}