{% extends 'baseuser.html.twig' %}
{% block stylesheets %}

{% block title %}Eat&Fit{% endblock%}
{{ parent() }}

{% endblock %}

{% block head %}
	
{% endblock %}

{% block body %}



<!--content-->
<div class="blog">
	<div class="container">
		<div class="menu-top">
			<div class="col-md-4 menu-left">
				<h3>{% block head2 %} {% endblock %}</h3>
				<label><i class="glyphicon glyphicon-menu-up"></i></label>
				<span></span>
			</div>
			<div class="clearfix"> </div>
		</div>

		{% block body2 %} {% endblock %}
		<div class="col-md-3 categories-grid">
			<div class="search-in animated wow fadeInUp" data-wow-duration="1000ms" data-wow-delay="500ms">
				<h4>Buscar</h4>
					<div class="search">
					<form>
						<input type="text" placeholder="Search" required="" >
						<input type="submit" value="" >
					</form>
					</div>
			</div>
				<div class="grid-categories animated wow fadeInLeft" data-wow-duration="1000ms" data-wow-delay="500ms">
					<h4>Categor√≠a</h4>
					<ul class="popular">
						{% for tipoReceta in tiposReceta %}
							<li><a href="{{ path('App_user_listRecetaTipoReceta', { 'id': tipoReceta.id }) }}"><i class="glyphicon glyphicon-menu-right"> </i>{{tipoReceta.nombre}}</a></li>
						{% endfor %}	
					</ul>
				</div>
				<div class="grid-categories animated wow fadeInLeft" data-wow-duration="1000ms" data-wow-delay="500ms">
					<h4>Hora</h4>
					<ul class="popular">
						{% for horaIngesta in horasIngesta %}
							<li><a href="{{ path('App_user_listRecetaHoraIngesta', { 'id': horaIngesta.id }) }}"><i class="glyphicon glyphicon-menu-right"> </i>{{horaIngesta.nombre}}</a></li>
						{% endfor %}	
					</ul>
				</div>
				<div class="blog-bottom animated wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="500ms">
						<h4>Recetas recientes</h4>	
						{% for lastReceta in lastRecetas %}
							<div class="product-go">
								<a href="single.html" class="fashion"><img class="img-responsive " src="{{ asset ('imagenes/'~lastReceta.imagen)}}" alt=""></a>
								<div class="grid-product">
									<a href="single.html" class="elit">{{lastReceta.nombre}}</a>
									<p>{{lastReceta.descripcion(20)}}</p>
								</div>
								<div class="clearfix"> </div>
							</div>
						{% endfor %}	
				</div>
		</div>
		<div class="clearfix"> </div>
	</div>
</div>

</div>
<!--//content-->

{% endblock %}